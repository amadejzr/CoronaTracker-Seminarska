@model IEnumerable<web.Models.Stik>

@using Microsoft.AspNetCore.Identity
@using web.Models

@inject SignInManager<Uporabnik> SignInManager
@inject UserManager<Uporabnik> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>@ViewData["userId"]</p>
<p></p>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priimek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (User.IsInRole("Administrator")){
    foreach (var item in Model) {
        
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>

            <td>
                    @Html.DisplayFor(modelItem => item.IdUser)
                </td>
               <td>
                 @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priimek)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Email)
            </td>
             <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="Confirm" asp-route-id="@item.Id">Confirm</a>
            </td>
        </tr>
    }
}
else{
    foreach (var item in Model) {
        if(item.IdUser.Equals((string)ViewData["userId"])){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priimek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="Confirm" asp-route-id="@item.Id">Confirm</a> 
                </td>
            </tr>
        }
    }
}
    </tbody>
</table>
